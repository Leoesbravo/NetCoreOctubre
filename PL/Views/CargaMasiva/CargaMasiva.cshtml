@{
    ViewData["Title"] = "CargaMasiva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Carga Masiva Alumno</h1>

<div class="container">
    @using (Html.BeginForm("CargaTXT", "CargaMasiva", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="d-grid gap-2 col-6 mx-auto">
                <button class="btn btn-outline-warning" type="button">TXT</button>
                <input type="file" name="archivoTXT"/>
                <button class="btn btn-outline-success" type="button">Excel</button>
                <input type="file" />
            </div>
            <button type="submit" class="btn btn-outline-success" type="button">Cargar</button>
        </div>
    }
</div>

